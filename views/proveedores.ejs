<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Proveedores</title>
</head>
<body>
    <nav class="navbar bg-primary navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand link-warning fs-3" href="#">Stack</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarScroll">
                <ul class="navbar-nav mx-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                    <li class="nav-item"><a class="nav-link link-light" href="#">Inicio</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle link-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Ventas </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Caja</a></li>
                            <li><a class="dropdown-item" href="#">Cliente</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle link-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Compras </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/proveedores">Proveedor</a></li>
                            <li><a class="dropdown-item" href="/insumos">Orden de compra</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle link-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Almacen </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Kardex</a></li>
                            <li><a class="dropdown-item" href="#">Producto</a></li>
                            <li><a class="dropdown-item" href="#">Categoria</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Búsqueda</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Lista de Proveedores</h1>
        <table class="table mt-4 table-hover">
            <thead class="table-info">
                <tr>
                    <th>ID Proveedor</th>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% proveedores.forEach(function(proveedor) { %>
                    <tr>
                        <td><%= proveedor._id %></td>
                        <td><%= proveedor.nombrecia %></td>
                        <td>
                            <a href="/proveedor/edit/<%= proveedor._id %>" class="btn btn-outline-primary fs-5 fa-solid fa-pen-to-square"></a>
                            <form action="/proveedor/delete/<%= proveedor._id %>" method="get" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este proveedor?');" style="display:inline;">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="btn btn-outline-danger fs-5 fa-solid fa-trash-can"></button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <h2 class="text-2xl font-bold mt-8 mb-2">Agregar Proveedor</h2>
        <form action="/proveedor/add" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label class="form-label">Nombre</label>
                <input class="form-control" id="nombre" type="text" name="nombre" required>
            </div>
            <div class="d-flex justify-content-between">
                <button class="btn btn-primary" type="submit">Crear Proveedor</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>


